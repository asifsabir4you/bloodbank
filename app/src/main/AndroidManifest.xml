<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asifsabir.blooddonor">

    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/blood_drop"
        android:label="@string/app_name"
        android:roundIcon="@drawable/blood_drop"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCdAIgQezzRP260GI56dABQHMvJsoocTOs" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>


        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ShowRequest"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".MakeRequest"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".PhoneAuthActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".AboutPage"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".RegistrationActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".MyReqActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".SavedReqActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ShowDonorsMapActivity"
            android:screenOrientation="portrait"></activity>

    </application>

</manifest>