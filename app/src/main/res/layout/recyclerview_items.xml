<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="2dp"
    card_view:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorForTabs"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Requested by: "
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_requester_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/name_tag"
            android:layout_toRightOf="@+id/name_tag"
            android:gravity="center"
            android:text="John doe"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/phone_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name_tag"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Phone: "
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_requester_name"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/phone_tag"
            android:layout_toRightOf="@+id/phone_tag"
            android:gravity="center"
            android:text="Number"
            android:textColor="#000"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tv_time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/phone_tag"
            android:gravity="center"
            android:text="timestamp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/location_tag"
            android:layout_width="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_time_stamp"
            android:gravity="center"
            android:text="Location: "
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_stamp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/location_tag"
            android:layout_toLeftOf="@+id/tv_view"
            android:layout_toRightOf="@+id/location_tag"
            android:gravity="left"
            android:text="location"
            android:layout_marginTop="6dp"
            android:textColor="#000"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tv_blood_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/blood_group_mini_background"
            android:gravity="center"
            android:text="00"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/view_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/tv_blood_group"
            android:layout_below="@+id/tv_blood_group"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="view"
            android:textColor="#000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/tv_blood_group"
            android:layout_below="@+id/view_tag"
            android:gravity="center"
            android:text="100"
            android:textColor="#000"
            android:textSize="18dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>